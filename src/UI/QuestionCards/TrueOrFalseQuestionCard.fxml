<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane fx:id="TFQuestionCard" prefHeight="253.0" prefWidth="435.0" style="-fx-background-color: #d3d3d3;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <TextArea fx:id="TFQuestionTextArea" layoutX="18.0" layoutY="16.0" prefHeight="43.0" prefWidth="399.0" promptText="Question" />
      <AnchorPane fx:id="TFChoicesContainer" layoutX="16.0" layoutY="70.0" prefHeight="170.0" prefWidth="404.0">
         <children>
            <RadioButton fx:id="TFtrueRadioButton" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" text="True">
               <font>
                  <Font size="14.0" />
               </font>
               <toggleGroup>
                  <ToggleGroup fx:id="trueOrFalseChoices" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="TFfalseRadioButton" layoutX="14.0" layoutY="55.0" mnemonicParsing="false" text="False" toggleGroup="$trueOrFalseChoices">
               <font>
                  <Font size="14.0" />
               </font>
            </RadioButton>
         </children>
      </AnchorPane>
   </children>
</Pane>
